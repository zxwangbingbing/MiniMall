@import "../../../style/skin.wxss";

page {
	background-color: #fff !important;
}

.main {
	padding: 10rpx !important;
} 
 

.list {
	width: 100%;
	padding: 0rpx 12rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 20rpx 20rpx;
	overflow: hidden;
	position: relative; 
	margin-bottom: 20rpx;
} 

.list .item .left {
	width: 230rpx;
	height: 170rpx;
	border-radius: 14rpx;
	margin-right: 25rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	padding: 6rpx 0;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 10rpx;
}

.list .item .right .top .desc {
	width: 100%;
	font-size: 26rpx;
	color: #999;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	align-items: center;
}

.list .item .right .line .join {
	color: #fff;
	font-size: 24rpx;
	padding: 12rpx 30rpx;
	background-color: #ccc;
	border-radius: 30rpx;
}

.list .item .right .line .join.comm {
	background-image: linear-gradient(45deg, #CF9F79, #ecc5a5, #e4c1a5);
}

.tabs .tab-menu.cur {
	color: #000 !important;
	font-size: 30rpx !important;
}


 